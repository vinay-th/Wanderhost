<% layout("/layouts/boilerplate") -%>
<style>
  .container {
    margin: 0;
    padding: 0;
  }
</style>
<body>
  <div class="main">
    <div class="rect-1">
      <img id="show-img" src="<%= listing.image %>" alt="" />
      <span class="show-title"><%= listing.title%></span>
      <div class="show-text">
        <ul>
          <li><%= listing.description %></li>
          <li><%= listing.location %></li>
          <li><%= listing.country %></li>
          <li id="price">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>
          </li>
        </ul>
        <form action="/edit/<%= listing._id %>" method="get">
          <button>Edit</button>
        </form>
      </div>
    </div>
  </div>
</body>
